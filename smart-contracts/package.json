  "license": "MIT",
  "scripts": {
    "build": "yarn hardhat compile",
    "build:abis": "yarn hardhat export:abis",
    "test": "yarn run test:optimism && yarn run test:base && yarn run test:hardhat && yarn run test:ethereum",
    "test:base": "RPC_URL=https://rpc.unlock-protocol.com/8453 yarn hardhat test test/**/*.base.ts",
    "test:hardhat": "yarn hardhat test test/**/*.hardhat.ts",
    "test:ethereum": "RPC_URL=https://rpc.unlock-protocol.com/1 yarn hardhat test test/**/*.ethereum.ts",
    "test:optimism": "RPC_URL=https://rpc.unlock-protocol.com/10 yarn hardhat test test/**/*.optimism.ts",
    "test:sepolia": "RPC_URL=https://rpc.unlock-protocol.com/11155111 yarn hardhat test test/**/*.sepolia.ts",
    "lint:contracts": "solhint 'contracts/**/*.sol'",
    "lintFix": "yarn lint:contracts --fix --noPrompt && yarn lint:code --fix",
    "lint:code": "eslint .",
    "lint": "yarn lint:contracts && yarn lint:code",
    "postinstall": "husky",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable"
  },
  "devDependencies": {
    "@eslint/js": "9.19.0",
    "@nomicfoundation/hardhat-chai-matchers": "2.0.8",
