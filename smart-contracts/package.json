    "@typechain/ethers-v6": "0.5.1",
    "@typechain/hardhat": "9.1.0",
    "@types/chai": "4.3.20",
    "@types/fs-extra": "11.0.4",
    "@types/mocha": "10.0.10",
    "@types/node": "22.13.0",
    "@types/semver": "7",
    "chai": "4.5.0",
    "eslint": "9.19.0",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-evm-address-to-checksummed": "0.0.6",
